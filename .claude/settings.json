{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "kspec session prompt-check"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/kspec-worktree-guard.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/ralph-task-limit-guard.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "kspec session checkpoint --json"
          }
        ]
      }
    ]
  }
}
